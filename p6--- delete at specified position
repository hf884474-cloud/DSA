//doubt

import java.util.Scanner;

public class MultiDelete {
    private Scanner sc = new Scanner(System.in);
    private int[] arr = new int[100]; // Max capacity is 100
    private int n = 0; // Current number of elements

    public static void main(String[] args) {
        MultiDelete obj = new MultiDelete();
        obj.input();
        
        // Example of adding one more element to test overflow
        obj.insertElement(999); 
        
        obj.deleteMultiple();
        obj.display();
    }

    public void input() {
        System.out.print("Enter number of elements to insert: ");
        int num = sc.nextInt();

        // --- OVERFLOW CONDITION ---
        if (num > 100) {
            System.out.println("Overflow: Cannot insert " + num + " elements. Max capacity is 100.");
            n = 0; // Reset or handle as needed
            return;
        }

        n = num;
        System.out.println("Enter " + n + " elements:");
        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }
    }

    // Method to demonstrate overflow during a single insertion
    public void insertElement(int val) {
        // --- OVERFLOW CONDITION ---
        if (n >= 100) {
            System.out.println("Overflow: Array is full. Cannot add " + val);
            return;
        }
        
        arr[n] = val;
        n++;
        System.out.println("Inserted " + val + " successfully.");
    }

    public void deleteMultiple() {
        // --- UNDERFLOW CONDITION ---
        if (n == 0) {
            System.out.println("Underflow: Array is empty. Nothing to delete.");
            return;
        }

        System.out.print("Enter starting index to delete from: ");
        int startIndex = sc.nextInt();
        System.out.print("Enter how many elements to delete: ");
        int numToDelete = sc.nextInt();

        if (startIndex < 0 || startIndex >= n || numToDelete < 0) {
            System.out.println("Invalid input range.");
            return;
        }

        if (startIndex + numToDelete > n) {
            numToDelete = n - startIndex; 
            System.out.println("Limit exceeded. Deleting remaining elements only.");
        }

        for (int i = startIndex; i < n - numToDelete; i++) {
            arr[i] = arr[i + numToDelete];
        }

        n = n - numToDelete;
        System.out.println("Deleted " + numToDelete + " element(s) successfully.");
    }

    public void display() {
        if (n == 0) {
            System.out.println("Array is empty.");
            return;
        }
        System.out.print("Current Array: ");
        for (int i = 0; i < n; i++) {
            System.out.print(arr[i] + " ");
        }
        System.out.println();
    }
}
