//doubt

import java.util.Scanner;

public class MultiDelete {
    static Scanner sc = new Scanner(System.in);
    static int[] arr = new int[100]; // Static array with max capacity
    static int n; // Logical size

    public static void main(String[] args) {
        input();
        deleteMultiple();
        display();
    }

    public static void input() {
        System.out.print("Enter number of elements: ");
        n = sc.nextInt();

        if (n < 1 || n > 100) {
            System.out.println("Invalid size (1-100).");
            return;
        }

        System.out.println("Enter " + n + " elements:");
        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }
    }

    public static void deleteMultiple() {
        if (n == 0) {
            System.out.println("Underflow: Array is empty.");
            return;
        }

        System.out.print("Enter starting index to delete from: ");
        int startIndex = sc.nextInt();
        System.out.print("Enter how many elements to delete: ");
        int numToDelete = sc.nextInt();

        // 1. Validation (Overflow/Underflow Check)
        if (startIndex < 0 || startIndex >= n || numToDelete < 0) {
            System.out.println("Invalid input range.");
            return;
        }

        // Adjust numToDelete if it exceeds the remaining elements
        if (startIndex + numToDelete > n) {
            numToDelete = n - startIndex; 
            System.out.println("Limit exceeded. Deleting remaining elements only.");
        }

        // 2. Shift elements to the left
        // We move elements from (startIndex + numToDelete) back to startIndex
        for (int i = startIndex; i < n - numToDelete; i++) {
            arr[i] = arr[i + numToDelete];
        }

        // 3. Update logical size
        n = n - numToDelete;
        System.out.println("Deleted " + numToDelete + " element(s) successfully.");
    }

    public static void display() {
        System.out.print("Current Array: ");
        for (int i = 0; i < n; i++) {
            System.out.print(arr[i] + " ");
        }
        System.out.println();
    }
}
