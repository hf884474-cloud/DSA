import java.util.Scanner;

public class SecureArrayMerger {
    // Static class-level variables
    static Scanner sc = new Scanner(System.in);
    static int[] arr1;
    static int[] arr2;
    static int[] mergedArr;
    
    // Constraint to prevent memory overflow
    static final int MAX_SIZE = 100;

    public static void main(String[] args) {
        inputArrays();
        
        // Only merge if both arrays were created successfully
        if (arr1 != null && arr2 != null) {
            mergeArrays();
            displayResult();
        }
    }

    public static void inputArrays() {
        // --- Input for Array 1 ---
        System.out.print("Enter size of 1st array (Max " + MAX_SIZE + "): ");
        int n1 = sc.nextInt();

        if (n1 < 0) {
            System.out.println("Underflow Error: Size cannot be negative.");
            return; 
        } else if (n1 > MAX_SIZE) {
            System.out.println("Overflow Error: Size exceeds MAX_SIZE of " + MAX_SIZE);
            return;
        }

        arr1 = new int[n1];
        System.out.println("Enter " + n1 + " elements:");
        for (int i = 0; i < n1; i++) {
            arr1[i] = sc.nextInt();
        }

        // --- Input for Array 2 ---
        System.out.print("Enter size of 2nd array (Max " + MAX_SIZE + "): ");
        int n2 = sc.nextInt();

        if (n2 < 0) {
            System.out.println("Underflow Error: Size cannot be negative.");
            return;
        } else if (n2 > MAX_SIZE) {
            System.out.println("Overflow Error: Size exceeds MAX_SIZE of " + MAX_SIZE);
            return;
        }

        arr2 = new int[n2];
        System.out.println("Enter " + n2 + " elements:");
        for (int i = 0; i < n2; i++) {
            arr2[i] = sc.nextInt();
        }
    }

    public static void mergeArrays() {
        int totalLength = arr1.length + arr2.length;

        // Check if the combination exceeds our memory safety limit
        if (totalLength > MAX_SIZE) {
            System.out.println("Merge Error: Resulting array (" + totalLength + ") would exceed MAX_SIZE.");
            return;
        }

        mergedArr = new int[totalLength];
        int k = 0; // Index tracker for merged array

        // Copy first array
        for (int i = 0; i < arr1.length; i++) {
            mergedArr[k] = arr1[i];
            k++;
        }

        // Copy second array
        for (int i = 0; i < arr2.length; i++) {
            mergedArr[k] = arr2[i];
            k++;
        }
    }

    public static void displayResult() {
        if (mergedArr == null) {
            System.out.println("No merged array to display.");
            return;
        }

        System.out.print("Merged Array Content: ");
        for (int i = 0; i < mergedArr.length; i++) {
            System.out.print(mergedArr[i] + " ");
        }
        System.out.println();
    }
}
