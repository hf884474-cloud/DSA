import java.util.Scanner;

public class ArraySearcher {
    static final int MAX_SIZE = 100; 
    static final int MIN_SIZE = 1; // Defining the lower bound for underflow check
    
    static int[] arr;
    static int target;

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        readArray(sc);
        
        // Only proceed if the array was actually initialized (prevents NullPointerException)
        if (arr != null && arr.length > 0) {
            displayArray();
            findOccurrences();
        }

        sc.close();
    }

    public static void readArray(Scanner sc) {
        int size = 0;

        System.out.print("Enter the size of the array: ");
        size = sc.nextInt();

        // --- Overflow and Underflow Logic ---
        if (size > MAX_SIZE) {
            System.out.println("OVERFLOW ERROR: Size " + size + " exceeds maximum capacity of " + MAX_SIZE + ".");
            return; // Exit method early
        } else if (size < MIN_SIZE) {
            System.out.println("UNDERFLOW ERROR: Size " + size + " is below the minimum required size of " + MIN_SIZE + ".");
            return; // Exit method early
        }

        // If checks pass, initialize the array
        arr = new int[size];
        System.out.println("Enter " + size + " elements:");
        for (int i = 0; i < arr.length; i++) {
            arr[i] = sc.nextInt();
        }

        System.out.print("Enter the element to search for: ");
        target = sc.nextInt();
    }

    public static void displayArray() {
        System.out.print("\nArray Elements: ");
        for (int element : arr) {
            System.out.print(element + " ");
        }
        System.out.println();
    }

    public static void findOccurrences() {
        int count = 0;
        boolean found = false;

        System.out.println("Searching for " + target + "...");
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == target) {
                System.out.println("Target found at Index: " + i);
                count++;
                found = true;
            }
        }

        if (!found) {
            System.out.println("The element " + target + " does not exist.");
        } else {
            System.out.println("Total number of occurrences: " + count);
        }
    }
}
