import java.util.Scanner;

public class ArraySearcher {
    // We keep these static so the methods can modify them easily, 
    // but the Scanner is now localized.
    static int[] arr;
    static int target;

    public static void main(String[] args) {
        // Initialize the scanner locally in main
        Scanner sc = new Scanner(System.in);

        readArray(sc);     // Pass it in
        displayArray();    // Doesn't need scanner
        findOccurrences();

        sc.close();        // Clean up resource
    }

    // Method now accepts Scanner as a parameter
    public static void readArray(Scanner sc) {
        System.out.print("Enter the size of the array: ");
        int size = sc.nextInt();
        arr = new int[size];

        System.out.println("Enter " + size + " elements:");
        for (int i = 0; i < arr.length; i++) {
            arr[i] = sc.nextInt();
        }

        System.out.print("Enter the element to search for: ");
        target = sc.nextInt();
    }

    public static void displayArray() {
        System.out.print("\nArray Elements: ");
        for (int element : arr) {
            System.out.print(element + " ");
        }
        System.out.println();
    }

    public static void findOccurrences() {
        int count = 0;
        boolean found = false;

        System.out.println("Searching for " + target + "...");
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == target) {
                System.out.println("Target found at Index: " + i);
                count++;
                found = true;
            }
        }

        if (!found) {
            System.out.println("The element " + target + " does not exist.");
        } else {
            System.out.println("Total number of occurrences: " + count);
        }
    }
}
