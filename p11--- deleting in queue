import java.util.Scanner;

public class QueueManager {
    static Scanner sc = new Scanner(System.in);
    static final int MAX_SIZE = 100;
    static int[] queue = new int[MAX_SIZE];
    static int front = -1, rear = -1;

    public static void main(String[] args) {
        // Step 1: Add some data to the queue
        createInitialQueue();
        
        // Step 2: Delete multiple elements
        dequeueMultiple();
        
        // Step 3: Show remaining queue
        displayQueue();
    }

    // Method to delete more than one element (Dequeue)
    public static void dequeueMultiple() {
        // Check Underflow: Is the queue empty?
        if (front == -1 || front > rear) {
            System.out.println("Underflow Error: Queue is already empty.");
            return;
        }

        System.out.print("How many elements do you want to delete? ");
        int numToDelete = sc.nextInt();

        // Safety Check: Don't delete more than what exists
        int available = (rear - front) + 1;
        if (numToDelete > available) {
            System.out.println("Note: Only " + available + " elements exist. Deleting all.");
            numToDelete = available;
        }

        System.out.print("Deleting elements: ");
        for (int i = 0; i < numToDelete; i++) {
            System.out.print(queue[front] + " ");
            front++; // Move front pointer to the next element
        }

        // Reset pointers if queue becomes empty after deletion
        if (front > rear) {
            front = rear = -1;
        }
        
        System.out.println("\nSuccessfully deleted " + numToDelete + " element(s).");
    }

    public static void createInitialQueue() {
        System.out.print("Enter number of elements to enqueue initially: ");
        int n = sc.nextInt();
        
        if (n > 0 && n <= MAX_SIZE) {
            front = 0;
            System.out.println("Enter " + n + " elements:");
            for (int i = 0; i < n; i++) {
                rear++;
                queue[rear] = sc.nextInt();
            }
        }
    }

    public static void displayQueue() {
        if (front == -1 || front > rear) {
            System.out.println("Queue is empty.");
            return;
        }
        System.out.print("Remaining Queue: ");
        for (int i = front; i <= rear; i++) {
            System.out.print(queue[i] + " ");
        }
        System.out.println();
    }
}
